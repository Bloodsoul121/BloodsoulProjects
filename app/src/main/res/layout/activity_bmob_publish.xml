<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cgz.bloodsoulprojects.bmob.publish.BmobPublishActivity">

        <Button
            android:onClick="clickBtn1"
            android:text="本地推送消息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="clickBtn2"
            android:text="客户端组播推送消息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="clickBtn3"
            android:text="查询设备表的用户信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="clickBtn4"
            android:text="修改设备表的用户信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="clickBtn5"
            android:text="订阅频道"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="clickBtn6"
            android:text="退订频道"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>
